datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model User {
  id       String    @id @default(uuid())
  name     String
  provider Provider
  email    String    @unique
  password String?
  missions Mission[]
}

enum Provider {
  CRED
  GITHUB
}

model Mission {
  id         String   @id @default(uuid())
  title      String
  data       String
  modifiedAt DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}
